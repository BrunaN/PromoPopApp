<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoCadastro"
        android:layout_width="128dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
        android:layout_marginTop="69dp"
        android:layout_gravity="center"
        tools:srcCompat="@android:drawable/sym_def_app_icon" />


    <EditText
        android:id="@+id/nomeCadastro"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/emailCadastro"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/senhaCadastro"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_gravity="center"  />

    <EditText
        android:id="@+id/confirmarSenhaCadastro"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Confirme a senha"
        android:inputType="textPassword"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/submitCadastro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar-se"
        android:layout_gravity="center"  />


    <TextView
        android:id="@+id/textViewCadastro"
        android:layout_width="225dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:text="Já possui uma conta?"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/loginBtnCadastro"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Faça Login"
        android:layout_gravity="center"  />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>