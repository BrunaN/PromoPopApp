<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?android:attr/windowBackground"
            android:id="@+id/toolbar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoLogin"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher_round"/>

        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Entre com seu email"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:layout_marginTop="25dp" />

        <EditText
            android:id="@+id/senhaLogin"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Entre com sua senha"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/avancarBtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avançar"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            />

        <Button
            android:id="@+id/submitLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginRight="80dp" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="250dp"
            android:layout_height="24dp"
            android:layout_marginTop="25dp"
            android:text="ou usando sua rede social"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/facebookBtnLogin"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Entrar com Facebook"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/gplusBtnLogin"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Entrar com Google"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/textView2Login"
            android:layout_width="250dp"
            android:layout_height="24dp"
            android:text="Ainda não tem uma conta?"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/cadastreseBtnLogin"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="CADASTRE-SE"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/visitanteBtnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Entrar como visitante"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>