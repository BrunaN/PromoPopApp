<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?android:attr/windowBackground"
                android:id="@+id/toolbar"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_vertical_red" />

            <EditText
                android:id="@+id/emailLogin"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Entre com seu email"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:background="@drawable/inputs"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/senhaLogin"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Entre com sua senha"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:background="@drawable/inputs"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/submitLogin"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:text="Entrar"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_red"/>


            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="250dp"
                android:layout_height="24dp"
                android:layout_marginTop="35dp"
                android:text="ou usando sua rede social"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/facebookBtnLogin"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:background="@drawable/btn_facebook"
                android:text="Entrar com Facebook"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/gplusBtnLogin"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:background="@drawable/btn_google"
                android:text="Entrar com Google"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/textView2Login"
                android:layout_width="250dp"
                android:layout_height="24dp"
                android:textSize="16dp"
                android:text="Ainda nÃ£o tem uma conta?"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/cadastreseBtnLogin"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="cadastre-se"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/visitanteBtnLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Continuar como visitante"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>