<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CadastroAnuncio"
    android:background="@color/fundoapp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoStore"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher_round"/>

        <EditText
            android:id="@+id/edtNomeLoja"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Nome da Loja"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Email"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtSenha"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Senha"
            android:inputType="numberPassword" />
        <EditText
            android:id="@+id/edtConfirmSenha"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Repita a senha"
            android:inputType="numberPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">

            <EditText
                android:id="@+id/edtCidade"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="Cidade"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtEndereco"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:hint="Endereço"
                android:inputType="text" />

        </LinearLayout>


        <EditText
            android:id="@+id/edtCNPJ"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:hint="CPNJ"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtRamoAtuacao"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:hint="Ramo de Atuação"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_redondo_vermelho"
            android:text="Salvar"
            android:textColor="@color/fundoapp" />

    </LinearLayout>





</android.support.constraint.ConstraintLayout>